<%= form_for @pcategory do |f| %>
  <% if @pcategory.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@pcategory.errors.count, "error") %> prohibited
      this article from being saved:</h2>
    <ul>
    <% @pcategory.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
