<h2 class="text-center">Vpiši se</h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  
<%= f.email_field :email, autofocus: true, label: 'Email', placeholder: 'Vpiši svoj email...' %>

 
  <%= f.password_field :password, label: 'Geslo', placeholder: 'Vpiši novo geslo...' %>

 
  <%= f.password_field :password_confirmation, label: 'Geslo', placeholder: 'Ponovno vpiši geslo...' %>

  <div><%= f.submit "Vpiši se", class: 'btn btn-success btn-lg' %></div>
<% end %>
<br>
<%= render "devise/shared/links" %>
